<!DOCTYPE html>
<html>
  <head>
    <title>MyruleLife</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header-nav">
        <span class="site-title"><%= link_to "みんなのマイルール帳", root_url %></span>
        <nav class="nav-header">
          <ul class="nav-list-ul">
            <% if logged_in? %>
              <li class="nav-list-li"><%= link_to 'ログアウト', "/logout", class: ""%></li>
            <% else %>
              <li class="nav-list-li"><%= link_to 'ログイン', "/auth/twitter" %>
            <% end %>
          </ul>
        </nav>
    </header>
      <div id="wrapper">
        <div class="main">
          <%= yield %>
        </div>
      </div>

      <footer>
        <%= render 'layouts/footer' %>
      </footer>
  </body>
</html>
